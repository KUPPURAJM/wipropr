
import java.util.Scanner;
public class sumoffact {
public static int fact(int a){
int temp=1;
for(int i=1;i<=a;i++){
temp=temp*i;
}
return temp;
}


    public static void main(String[] args) {
      Scanner s=new Scanner(System.in);  
      int n=s.nextInt();
      int res=0;
      for(int i=1;i<=n;i++){
          res=res+fact(i);
      }
        System.out.println(res);
      
    }
    
}
